<% include partials/header%>
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>welcome to yelp!</h1>
                <p></p>
                <p>
                    <a class="btn btn-primary btn-large" href="/scenicspots/new">create new scenic spots</a>
                </p>
            </div>
        </header>
        
        
        <div class="row text-center" style="display:flex; flex-wrap:wrap">
            <% scenicspots.forEach(function(scenicspot){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= scenicspot.image %>">
                        <div class="caption">
                            <h4><%= scenicspot.name %></h4>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

<% include partials/footer%>