<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= scenicspot.name %></h1>
        <div style="width:30%; margin:30px auto;">
                                                                <!--no , here-->
            <form action="/scenicspots/<%=scenicspot._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="scenicspot[name]" value="<%= scenicspot.name %>"></input> 
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="scenicspot[price]" value="<%= scenicspot.price %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="scenicspot[image]" value="<%= scenicspot.image %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="scenicspot[description]" value="<%= scenicspot.description %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/scenicspots">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>